<Window x:Class="ugyfel.Regisztracio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ugyfel"
        mc:Ignorable="d"
        Title="Regisztracio" Height="418" Width="314"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="0,0,-36,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="201*"/>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" Margin="90,58,0,0" VerticalAlignment="Top" Height="26" Width="93"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="98,107,0,0" VerticalAlignment="Top" Height="26" Width="44"/>
        <Label Content="Jelszó újra:" HorizontalAlignment="Left" Margin="98,165,0,0" VerticalAlignment="Top" Height="26" Width="67" Grid.RowSpan="2"/>
        <Label Content="E-mail cím:" HorizontalAlignment="Left" Margin="98,42,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="68"/>
        <TextBox x:Name="felhasznalonev" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Height="18"/>
        <PasswordBox x:Name="jelszo" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="120" Height="18"/>
        <PasswordBox x:Name="jelszoujra" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="120" Height="18" Grid.Row="1"/>
        <TextBox x:Name="email" HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="1" Height="18" TextChanged="email_TextChanged"/>
        <Button Content="Regisztráció" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Grid.Row="1" Height="20" Width="67" Click="Button_Click"/>
        <Label Content="Regisztráció" HorizontalAlignment="Left" Margin="114,20,0,0" VerticalAlignment="Top" Height="26" Width="74"/>

    </Grid>
</Window>
